<Window x:Class="RPALite.src.WowShuffer.WowShuffGui"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPALite.src.WowShuffer"
        mc:Ignorable="d"
        Title="RPALite - WOW"
        Height="180" Width="230"
        ResizeMode="NoResize">
    <StackPanel>
        <TextBlock x:Name="wowFindBlock" FontSize="16" Height="20" Margin="8 20 0 10"><Run Text="❌ 未找到魔兽世界"/></TextBlock>
        <TextBlock x:Name="runTimeBlock" FontSize="16" Height="20" Margin="8 10 0 10"><Run Text="⏺ 运行时间:"/><Run Language="zh-cn" Text=" 无"/></TextBlock>
        <TextBlock x:Name="hwndBlock"  FontSize="16" Height="20" Margin="8 10 0 10" VerticalAlignment="Center">
            <Button PreviewMouseDown="Hover_MouseDown"
            PreviewMouseUp="Hover_MouseUp" Width="14" Height="14" Background="#FF71F7B7" Margin="4,0,3,0" BorderThickness="1,1,1,1" Click="Button_Click" HorizontalAlignment="Right" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" UseLayoutRounding="False" BorderBrush="Black" RenderTransformOrigin="0.5,0.532" Content=""/><Run Text=" 拖拽绿方块到游戏窗口"/>
        </TextBlock>

    </StackPanel>
</Window>
